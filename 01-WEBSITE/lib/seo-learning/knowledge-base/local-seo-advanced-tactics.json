  "schemaMarkup": {
    "importance": "Critical for rich results and AI search visibility",
    "implementation": "JSON-LD in <head> section (Google's preferred format)",
    "requiredTypes": {
      "LocalBusiness": {
        "description": "Base type for all local businesses",
        "requiredProperties": ["@id", "name", "image", "address"],
        "recommendedProperties": ["geo", "telephone", "openingHours", "priceRange", "url"]
      },
      "HairSalon": {
        "description": "Specific subtype under HealthAndBeautyBusiness",
        "extends": "LocalBusiness",
        "useWhen": "Primary business is hair services"
      }
    },
    "additionalSchemaTypes": {
      "FAQPage": {
        "purpose": "Enables FAQ rich results in search",
        "bestPractice": "Add to service pages with 3-5 genuine FAQs"
      },
      "Review": {
        "purpose": "Shows star ratings in search results",
        "warning": "Must be real reviews, not fabricated"
      },
      "Service": {
        "purpose": "Describes specific services offered",
        "include": ["name", "description", "provider", "areaServed"]
      },
      "BreadcrumbList": {
        "purpose": "Shows site hierarchy in search results",
        "implementation": "On every page showing navigation path"
      },
      "AggregateRating": {
        "purpose": "Shows average rating and review count",
        "mustReflect": "Actual Google/Yelp ratings"
      }
    },
    "exampleHairSalonSchema": {
      "@context": "https://schema.org",
      "@type": "HairSalon",
      "@id": "https://chrisdavidsalon.com/#organization",
      "name": "Chris David Salon",
      "image": "https://chrisdavidsalon.com/images/salon-exterior.jpg",
      "url": "https://chrisdavidsalon.com",
      "telephone": "+1-561-299-0950",
      "priceRange": "$$$",
      "address": {
        "@type": "PostalAddress",
        "streetAddress": "403 E Atlantic Ave",
        "addressLocality": "Delray Beach",
        "addressRegion": "FL",
        "postalCode": "33483",
        "addressCountry": "US"
      },
      "geo": {
        "@type": "GeoCoordinates",
        "latitude": 26.4615,
        "longitude": -80.0728
      },
      "openingHoursSpecification": [
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": ["Monday", "Tuesday", "Wednesday", "Thursday", "Friday"],
          "opens": "09:00",
          "closes": "19:00"
        },
        {
          "@type": "OpeningHoursSpecification",
          "dayOfWeek": "Saturday",
          "opens": "09:00",
          "closes": "17:00"
        }
      ],
      "sameAs": [
        "https://www.facebook.com/chrisdavidsalon",
        "https://www.instagram.com/chrisdavidsalon",
        "https://www.yelp.com/biz/chris-david-salon-delray-beach"
      ],
      "aggregateRating": {
        "@type": "AggregateRating",
        "ratingValue": "4.9",
        "reviewCount": "143"
      }
    },
    "validationTools": [
      "Google Rich Results Test (https://search.google.com/test/rich-results)",
      "Schema.org Validator (https://validator.schema.org)",
      "Merkle Schema Markup Generator"
    ]
