  "googleBusinessProfile": {
    "importance": "THE single most important factor for local pack rankings (32%)",
    "topRankingFactors": [
      "Primary category selection (MOST CRITICAL)",
      "Physical address in search city",
      "Business open status at search time",
      "High star ratings",
      "Native Google reviews with text",
      "Keywords in business title (if legitimate)",
      "Additional relevant categories (up to 4)",
      "Complete profile with all fields filled",
      "Regular posting activity"
    ],
    "optimizationChecklist": {
      "essentials": [
        "Verify business ownership",
        "Select most accurate primary category",
        "Add 4 relevant additional categories",
        "Complete NAP (Name, Address, Phone) accurately",
        "Add business hours (including special hours)",
        "Write 750-character business description with keywords",
        "Add all services with descriptions",
        "Enable messaging and booking"
      ],
      "photos": {
        "minimum": 25,
        "ideal": "100+ photos (520% more calls)",
        "types": [
          "Logo and cover photo",
          "Interior photos (multiple angles)",
          "Exterior photos (storefront, signage)",
          "Staff photos",
          "Product/service photos",
          "Before/after photos",
          "Customer photos (with permission)"
        ],
        "specifications": {
          "format": "JPG or PNG",
          "size": "10KB to 5MB",
          "resolution": "720px minimum, 1080px+ preferred"
        }
      },
      "posts": {
        "frequency": "Weekly minimum",
        "types": ["Updates", "Offers", "Events", "Products"],
        "bestPractices": [
          "Include high-quality image",
          "Add clear CTA button",
          "Include relevant keywords naturally",
          "Keep text under 1500 characters"
        ]
      }
    },
    "negativeSignals": [
