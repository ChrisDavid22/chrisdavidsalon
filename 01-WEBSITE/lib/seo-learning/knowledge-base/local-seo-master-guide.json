  "onPageOptimization": {
    "importance": "15% for local pack, 33% for local organic",
    "titleTags": {
      "format": "[Primary Keyword] in [City] | [Business Name]",
      "maxLength": 60,
      "examples": [
        "Best Hair Colorist in Delray Beach | Chris David Salon",
        "Balayage & Highlights Delray Beach | Award-Winning Colorist"
      ]
    },
    "metaDescriptions": {
      "maxLength": 155,
      "mustInclude": ["Primary keyword", "City/Location", "USP", "CTA"],
      "example": "Award-winning hair colorist in Delray Beach with 20+ years experience. Balayage, color correction & extensions. Book your transformation: (561) 299-0950"
    },
    "headerTags": {
      "h1": "One per page, include primary keyword + location",
      "h2": "Service categories, benefit statements",
      "h3": "Specific services, FAQs",
      "naturalKeywordInclusion": true
    },
    "contentStrategy": {
      "servicePages": {
        "required": true,
        "urlFormat": "/services/[service]-[city].html",
        "minimumWordCount": 500,
        "mustInclude": [
          "Detailed service description",
          "Pricing or price range",
          "Process/what to expect",
          "Before/after images",
          "FAQ section (3-5 questions)",
          "Testimonials",
          "CTA with booking",
          "Schema markup"
        ]
      },
      "locationPages": {
        "required": "For each city/neighborhood served",
        "urlFormat": "/locations/[city]-hair-salon.html",
        "mustInclude": [
          "City-specific content (not just city name swap)",
          "Local landmarks and neighborhoods mentioned",
          "Embedded Google Map",
          "Driving directions from key areas",
          "Local testimonials",
          "Area-specific services if applicable"
        ]
      }
    },
    "internalLinking": {
      "strategy": "Hub and spoke - services hub links to individual services",
      "anchorText": "Descriptive, keyword-rich",
      "depth": "No page more than 3 clicks from homepage"
    },
    "schema": {
      "required": ["LocalBusiness", "HairSalon"],
      "recommended": ["FAQPage", "Review", "Service", "BreadcrumbList"],
      "implementation": "JSON-LD in head section"
    }
  },

